<div
  class="fixed w-full border-b border-gray-100 dark:border-darkBorder shadow-md dark:bg-dark bg-white z-50"
>
  <div class="px-6 md:px-8 lg:px-16 py-2 flex justify-between items-center">
    <div>
      <h1 class="text-bold text-xl dark:text-white">Leyn</h1>
    </div>
    <div class="hidden md:block">
      <div class="flex items-center justify-center">
        <div
          class="flex bg-gray-100 rounded-xl shadow-sm border border-gray-200 items-center justify-center px-2 py-[6px] group hover:border-gray-400 focus:border-gray-400 dark:bg-darkPrimary dark:border-darkPrimary dark:text-white"
        >
          <input
            type="text"
            placeholder="search"
            class="bg-transparent focus:outline-none px-2 md:w-64 lg:w-80"
          />
          <span
            class="border-l border-gray-200 pl-2 group-hover:border-gray-400 cursor-pointer dark:border-gray-700 dark:group-hover:border-gray-700"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24px"
              height="24px"
              viewBox="0 0 24 24"
              class="fill-gray-600 dark:fill-white"
            >
              <path
                d="m19.6 21l-6.3-6.3q-.75.6-1.725.95T9.5 16q-2.725 0-4.612-1.888T3 9.5q0-2.725 1.888-4.612T9.5 3q2.725 0 4.613 1.888T16 9.5q0 1.1-.35 2.075T14.7 13.3l6.3 6.3zM9.5 14q1.875 0 3.188-1.312T14 9.5q0-1.875-1.312-3.187T9.5 5Q7.625 5 6.313 6.313T5 9.5q0 1.875 1.313 3.188T9.5 14"
              /></svg
          ></span>
        </div>
      </div>
    </div>
    <div class="hidden md:block">
      <div class="flex items-center space-x-6">
        <a
          href="/create"
          title="Buat Postingan"
          class="flex items-center justify-center hover:bg-gray-200 rounded-md px-3 py-1 border shadow-sm cursor-pointer border-gray-200 dark:bg-darkPrimary dark:text-white dark:border-darkPrimary"
        >
          <span
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              class="fill-black dark:fill-white"
            >
              <path d="M11 13H5v-2h6V5h2v6h6v2h-6v6h-2z" /></svg
          ></span>
          <p class="ml-1">Posting</p>
        </a>
        <div class="cursor-pointer" title="Pesan">
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              class="fill-black dark:fill-white"
            >
              <path
                d="M4 4h16v12H5.17L4 17.17zm0-2c-1.1 0-1.99.9-1.99 2L2 22l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm2 10h12v2H6zm0-3h12v2H6zm0-3h12v2H6z"
              />
            </svg>
          </span>
        </div>
        <div class="cursor-pointer profile">
          <img
            src="../images/default-pp.webp"
            alt="PP"
            class="rounded-full w-8 h-8"
          />
        </div>
      </div>
    </div>

    <div class="block md:hidden">
      <div class="cursor-pointer profile">
        <img
          src="../images/default-pp.webp"
          alt="PP"
          class="rounded-full w-8 h-8"
        />
      </div>
    </div>
  </div>

  <!-- Popup Menu -->
  <div id="profileMenu" class="hidden absolute mt-1 right-6">
    <div
      class="bg-white rounded shadow-xl py-2 w-60 dark:bg-darkPrimary dark:text-white"
    >
      <a href="/@<%= loggedInUser.username %>">
        <div
          class="flex items-center hover:bg-gray-100 transition-colors py-2 px-4 dark:hover:bg-dark"
        >
          <span class="mr-2"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              class="fill-black dark:fill-white"
            >
              <path
                stroke-linejoin="round"
                d="M4 18a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2z"
              />
              <circle cx="12" cy="7" r="3" /></svg
          ></span>
          <p>Your Profile</p>
        </div>
      </a>
      <a href="#">
        <div
          class="flex items-center hover:bg-gray-100 transition-colors py-2 px-4 dark:hover:bg-dark"
        >
          <span class="mr-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              class="fill-black dark:fill-white"
            >
              <path
                d="M5 21V5q0-.825.588-1.412T7 3h10q.825 0 1.413.588T19 5v16l-7-3zm2-3.05l5-2.15l5 2.15V5H7zM7 5h10z"
              />
            </svg>
          </span>
          <p>Saved</p>
        </div>
      </a>
      <a href="#">
        <div
          class="flex items-center hover:bg-gray-100 transition-colors py-2 px-4 dark:hover:bg-dark"
        >
          <span class="mr-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 1024 1024"
              class="fill-black dark:fill-white"
            >
              <path
                d="M600.704 64a32 32 0 0 1 30.464 22.208l35.2 109.376c14.784 7.232 28.928 15.36 42.432 24.512l112.384-24.192a32 32 0 0 1 34.432 15.36L944.32 364.8a32 32 0 0 1-4.032 37.504l-77.12 85.12a357.12 357.12 0 0 1 0 49.024l77.12 85.248a32 32 0 0 1 4.032 37.504l-88.704 153.6a32 32 0 0 1-34.432 15.296L708.8 803.904c-13.44 9.088-27.648 17.28-42.368 24.512l-35.264 109.376A32 32 0 0 1 600.704 960H423.296a32 32 0 0 1-30.464-22.208L357.696 828.48a351.616 351.616 0 0 1-42.56-24.64l-112.32 24.256a32 32 0 0 1-34.432-15.36L79.68 659.2a32 32 0 0 1 4.032-37.504l77.12-85.248a357.12 357.12 0 0 1 0-48.896l-77.12-85.248A32 32 0 0 1 79.68 364.8l88.704-153.6a32 32 0 0 1 34.432-15.296l112.32 24.256c13.568-9.152 27.776-17.408 42.56-24.64l35.2-109.312A32 32 0 0 1 423.232 64H600.64zm-23.424 64H446.72l-36.352 113.088l-24.512 11.968a294.113 294.113 0 0 0-34.816 20.096l-22.656 15.36l-116.224-25.088l-65.28 113.152l79.68 88.192l-1.92 27.136a293.12 293.12 0 0 0 0 40.192l1.92 27.136l-79.808 88.192l65.344 113.152l116.224-25.024l22.656 15.296a294.113 294.113 0 0 0 34.816 20.096l24.512 11.968L446.72 896h130.688l36.48-113.152l24.448-11.904a288.282 288.282 0 0 0 34.752-20.096l22.592-15.296l116.288 25.024l65.28-113.152l-79.744-88.192l1.92-27.136a293.12 293.12 0 0 0 0-40.256l-1.92-27.136l79.808-88.128l-65.344-113.152l-116.288 24.96l-22.592-15.232a287.616 287.616 0 0 0-34.752-20.096l-24.448-11.904L577.344 128zM512 320a192 192 0 1 1 0 384a192 192 0 0 1 0-384m0 64a128 128 0 1 0 0 256a128 128 0 0 0 0-256"
              />
            </svg>
          </span>
          <p>Setting</p>
        </div>
      </a>
      <div>
        <!-- darkmode -->
        <div
          id="toggleDarkMode"
          class="flex hover:bg-gray-100 dark:hover:bg-dark transition-colors py-2 px-4 cursor-pointer justify-between"
        >
          <div class="flex items-center">
            <span class="mr-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 256 256"
                class="fill-black dark:fill-white"
              >
                <path
                  d="M233.54 142.23a8 8 0 0 0-8-2a88.08 88.08 0 0 1-109.8-109.8a8 8 0 0 0-10-10a104.84 104.84 0 0 0-52.91 37A104 104 0 0 0 136 224a103.09 103.09 0 0 0 62.52-20.88a104.84 104.84 0 0 0 37-52.91a8 8 0 0 0-1.98-7.98m-44.64 48.11A88 88 0 0 1 65.66 67.11a89 89 0 0 1 31.4-26A106 106 0 0 0 96 56a104.11 104.11 0 0 0 104 104a106 106 0 0 0 14.92-1.06a89 89 0 0 1-26.02 31.4"
                />
              </svg>
            </span>
            <p>Dark Mode</p>
          </div>
          <div>
            <label class="switch">
              <input
                id="darkModeCheckbox"
                class="switch-chexbox"
                type="checkbox"
              />
              <span class="slider round"></span>
            </label>
          </div>
        </div>
        <!-- end darkmode -->
      </div>
      <div>
        <div
          id="logoutButton"
          class="flex items-center hover:bg-gray-100 transition-colors py-2 px-4 dark:hover:bg-dark border-t border-gray-100 dark:border-gray-700 mt-2 cursor-pointer"
        >
          <span class="mr-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              class="fill-black dark:fill-white"
            >
              <path
                d="M12 18.25a.75.75 0 0 0 0 1.5h6A1.75 1.75 0 0 0 19.75 18V6A1.75 1.75 0 0 0 18 4.25h-6a.75.75 0 0 0 0 1.5h6a.25.25 0 0 1 .25.25v12a.25.25 0 0 1-.25.25z"
              />
              <path
                fill-rule="evenodd"
                d="M14.503 14.365c.69 0 1.25-.56 1.25-1.25v-2.24c0-.69-.56-1.25-1.25-1.25H9.89a26.723 26.723 0 0 0-.02-.22l-.054-.556a1.227 1.227 0 0 0-1.751-.988a15.059 15.059 0 0 0-4.368 3.164l-.099.103a1.253 1.253 0 0 0 0 1.734l.1.103a15.06 15.06 0 0 0 4.367 3.164a1.227 1.227 0 0 0 1.751-.988l.054-.556l.02-.22zm-5.308-1.5a.75.75 0 0 0-.748.704c-.019.29-.042.581-.07.871l-.016.162a13.562 13.562 0 0 1-3.516-2.607a13.558 13.558 0 0 1 3.516-2.607l.016.162c.028.29.051.58.07.871a.75.75 0 0 0 .748.704h5.058v1.74z"
                clip-rule="evenodd"
              />
            </svg>
          </span>
          <p>Log out</p>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Popup Menu -->
</div>
<!-- modal logout -->
<div id="logoutModal" class="hidden">
  <div
    class="flex fixed inset-0 z-50 items-center justify-center bg-gray-900 bg-opacity-50"
  >
    <div
      class="bg-white rounded-lg p-4 md:p-6 lg:p-8 max-w-md mx-auto dark:bg-darkPrimary dark:text-white"
    >
      <p class="text-lg font-semibold mb-4">
        Are you sure you want to log out?
      </p>
      <div class="flex justify-between">
        <button
          id="cancelLogout"
          class="px-4 py-2 bg-white text-gray-700 rounded mr-2 w-1/2 border border-gray-200 hover:border-gray-300 hover:bg-gray-100 dark:bg-darkPrimary dark:hover:bg-dark dark:hover:border-dark dark:text-white dark:border-gray-700"
        >
          Cancel
        </button>
        <button
          id="confirmLogout"
          class="px-4 py-2 bg-white rounded mr-2 w-1/2 border text-red-600 border-red-600 hover:border-red-800 hover:bg-red-100 dark:bg-[#241f1f]"
        >
          Log Out
        </button>
      </div>
    </div>
  </div>
</div>
<!-- End of modal logout -->
